<div id="record-container">
    <div id="record-data">

        <div id="record-left">
            <div class="cover"><%= link_to image_tag(@record.cover_url, size: '300x300'), edit_record_path(@record) if @record.cover? %></div>
           
        </div>
        <div id="record-right">
            <h2><%= @record.artist %></h2>
            <h3><%= @record.title %></h3>
            <p>Elektra Records</p>
            <ol>
                <li>In Between Days</li>
                <li>Kyoto Song</li>
                <li>The Blood</li>
                <li>Six Different Ways</li>
                <li>Push</li>
                <li>The Baby Screams</li>
                <li>Close to Me</li>
                <li>A Night Like This</li>
                <li>Screw</li>
                <li>Sinking</li>
            </ol>
        </div>
    </div><!-- record data -->
    <div id="notes">

        <%= render 'buttons' %>

     
    </div>
</div><!-- record container -->